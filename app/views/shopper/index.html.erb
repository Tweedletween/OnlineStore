<% if notice %>  <p id="notice"><%= notice %></p><% end %><% if flash[:error] %>  <p id="error"><%= flash[:error] %></p><% end %><div class='display_in_line'>  <form class="form-wrapper">    <input type="text" id="search" name="q" placeholder="Search for..." >    <span>-</span>    <input type="number" class="price" name="minp" min="0" step='0.01' placeholder="Min price" >    <span>/</span>    <input type="number" class="price" name="maxp" min="0" step='0.01' placeholder="Max price" >    <input type="submit" value="go" id="submit">  </form></div><% @products.each do |product| %>  <div class="entry">    <%= image_tag(product.image) %>    <h3><%= product.name %></h3>    <p><%= sanitize(product.description) %></p>    <div class="price_line">      <span class="price"><%= number_to_currency(product.price) %></span>      <%= button_to 'Add to Cart', lineitems_path(product_id: product), class:'add_to_chart', remote: true%>    </div>  </div><% end %>